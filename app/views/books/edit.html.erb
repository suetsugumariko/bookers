<!DOCTYPE html>
 <html>
  <body>
   <h1>Editing Books</h1>

   <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
   <P>
   <h4>Title</h4>
   <%= f.text_field :title%>
   </p>

   <p>
   <h4>Body</h4>
   <%= f.text_area :body%>
   </p>

   <p>
   <%= f.submit 'Update Book' %>
   </p>

   <%= link_to "show", edit_book_path(@book.id) %>
   |
   <%= link_to "Back", edit_book_path(@book.id)%>
   <% end %>

  </body>
</html>