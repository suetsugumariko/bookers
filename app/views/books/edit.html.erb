<!DOCTYPE html>
 <html>
  <body>
   <h1>Editing Books</h1>

   <%= form_with model:@book do |f| %>
   <P>
   <h4>Title</h4>
   <%= f.text_field :title%>
   </p>

   <p>
   <h4>Body</h4>
   <%= f.text_area :body%>
   </p>

   <p>
   <%= f.submit 'Update Book' %>
   <% end %>
   </p>

   <%= link_to "show", book_path(@book.id) %>
   |
   <a class="back" href="/books">Back</a>

  </body>
</html>